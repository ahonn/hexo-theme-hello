.markdown {
  a {
    color: darken(#f75357, 10%);

    &:hover {
      color: darken(#f75357, 20%);
      text-decoration: underline;
    }
  }

  h1, h2, h3, h4, h5, h6 {
    margin: 15px 0;
    color: #333;

    .header-anchor {
      font-size: .8em;
      color: #b4b4b4;

      &:hover {
        color: #f75357;
        text-decoration: none;
      }
    }
  }

  blockquote {
    margin: 2em 0;
    padding: 10px 20px;
    color: rgba(#333, 0.8);
    border-left: 2px solid #f75357;
    background: #f6f6f6;
    box-shadow: 1px 1px 2px rgba(0, 0, 0, 0.125);

    p {
      margin: 0;
    }
  }

  img {
    margin: 1em 0;
    max-width: 100%;
    box-shadow: 0 2px 6px hsla(0,0%,39%,.3);
  }

  code {
    padding: 3px 5px;
    border-radius: 4px;
    font-size: 14px;
    color: darken(#f75357, 20%);
    background: #f6f6f6;
    word-wrap: break-word;
  }
}
