.paginator {
  padding: 10px 0;
  text-align: center;
  font-family: "Libre Franklin", Georgia, serif;
  border-top: 1px solid #f1f1f1;

  .page-number {
    display: inline-block;
    margin: 0 5px;
    color: #666;
    font-size: 22px;

    &:hover {
      color: #f75357;
    }

    &.current {
      font-size: 28px;
      color: #333;

      &:hover {
        color: #333;
      }
    }
  }

  .extend {
    margin: 5px;
    font-size: 28px;

    &:hover {
      color: #f75357;
    }
  }
}
