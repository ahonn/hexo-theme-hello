<% if (!index && is_post()) { %>
  <div class="article-pagination">
    <% if (page.next) { %>
      <div class="next-article">
        <a class="article-link" href="<%- url_for(page.next.path) %>">
          <span class="hint">
            <i class="fa fa-chevron-left"></i>
            <%- __('article.next') %>
          </span>
          <span class="title"><%= page.next.title %></span>
        </a>
      </div>
    <% } %>
    <% if (page.prev) { %>
      <div class="prev-article">
        <a class="article-link" href="<%- url_for(page.prev.path) %>">
          <span class="hint">
            <%- __('article.prev') %>
            <i class="fa fa-chevron-right"></i>
          </span>
          <span class="title"><%= page.prev.title %></span>
        </a>
      </div>
    <% } %>
  </div>
<% } %>
